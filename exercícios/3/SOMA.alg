algoritmo "SOMA"
var
   N1, N2, S: INTEIRO //VARIÁVEL "S" PARA GUARDAR A SOMA.
inicio
      ESCREVA("INFORME UM NÚMERO: ")
      LEIA (N1)
      ESCREVA("INFORME OUTRO NÚMERO: ")
      LEIA (N2)
      S <- N1 + N2 //RESULTADO TEM QUE SER COLOCADO DENTRO DE VAR.
      ESCREVA ("A SOMA ENTRE", N1, " E", N2, " É IGUAL A:",S)
fimalgoritmo
