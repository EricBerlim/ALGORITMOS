algoritmo "EMPRÉSTIMO"
var
   VALOR, JUROS, VALORPARCELAS: REAL
   PARCELAS: INTEIRO
inicio
      ESCREVA ("QUAL O VALOR DO EMPRÉSTIMO? R$")
      LEIA (VALOR)
      ESCREVA ("QUAL A PORCENTAGEM DE JUROS? ")
      LEIA (JUROS)
      ESCREVA ("EM QUANTAS PARCELAS? ")
      LEIA (PARCELAS)

      VALOR <- (VALOR * JUROS / 100) + VALOR
      VALORPARCELAS <- VALOR/PARCELAS

      ESCREVAL ("VOCÊ PAGARÁ", PARCELAS," DE R$ ", VALORPARCELAS," TOTALIZANDO R$", VALOR)
      
fimalgoritmo
