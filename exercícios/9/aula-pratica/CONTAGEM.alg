algoritmo "CONTAGEM"

var
   VALOR,SALTO, CONTADOR: INTEIRO // É UM Nº, ENTÃO DECLARO "INTEIRO"
inicio
      CONTADOR <- 0 // INÍCIO DO CONTADOR
      ESCREVA("QUER CONTAR ATÉ QUANTO? ")
      LEIA(VALOR)
      ESCREVA("QUAL O VALOR DO SALTO? ")
      LEIA(SALTO)
      ENQUANTO (CONTADOR <= VALOR) FACA //VAI CONTAR ATÉ "VALOR"
               ESCREVAL(CONTADOR)
               CONTADOR <- CONTADOR + SALTO // ADD OU RETIRA O Nº
      FIMENQUANTO
      ESCREVAL("TERMINEI DE CONTAR.")
fimalgoritmo
